# ========================================

# ========================================
# AUTHENTICATION & SECURITY
# ========================================

# JWT Secret Key (REQUIRED - Change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Session Configuration
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret-key

# ========================================
# DATABASE CONFIGURATION
# ========================================

# Database Type (file, mongodb, postgresql, mysql)
DATABASE_TYPE=file

# Database URL (for external databases)
DATABASE_URL=mongodb://localhost:27017/cleaning-world

# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=cleaning-world
DB_USER=admin
DB_PASSWORD=password

# ========================================
# EMAIL CONFIGURATION
# ========================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
