SMTP_FROM=admin@cw.com.sa

# Email Templates
EMAIL_TEMPLATE_DIR=./templates/email

# ========================================
# SMS & NOTIFICATIONS
# ========================================

# SMS API Configuration
SMS_API_KEY=your-sms-api-key
